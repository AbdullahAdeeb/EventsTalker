  /// -------------- List animation  ------------//
  .animate-enter {
    position: relative;
    display: block;
    -webkit-animation: enter 575ms cubic-bezier(.420, .000, .580, 1.000);
    animation: enter 575ms cubic-bezier(.420, .000, .580, 1.000);
  }
  @-webkit-keyframes enter {
    from {
      right: -70px;
      height: 0;
      opacity: 0;
    }

    75% {
      right: 15px;
    }

    to {
      right: 0;
      height: 30px;
      opacity: 1;
    }
  }
  @keyframes enter {
    from {
      right: -70px;
      height: 0;
      opacity: 0;
    }

    75% {
      right: 15px;
    }

    to {
      right: 0;
      height: 30px;
      opacity: 1;
    }
  }

  .animate-leave {
    position: relative;
    display: block;
    -webkit-animation: leave 575ms cubic-bezier(.420, .000, .580, 1.000);
    animation: leave 575ms cubic-bezier(.420, .000, .580, 1.000);
  }
  @-webkit-keyframes leave {
    to {
      right: -70px;
      height: 0;
      opacity: 0;
    }

    25% {
      right: 15px;
    }

    from {
      right: 0;
      height: 30px;
      opacity: 1;
    }
  }
  @keyframes leave {
    to {
      right: -70px;
      height: 0;
      opacity: 0;
    }

    25% {
      right: 15px;
    }

    from {
      right: 0;
      height: 30px;
      opacity: 1;
    }
  }
