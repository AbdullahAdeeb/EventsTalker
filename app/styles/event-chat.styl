  /// ------------------ CHAT TAB ----------------------------///
  .chat-tab {
    height: 100%;
    padding-bottom: 44px;
    box-sizing: border-box;

    .chat-bottom-toolbar {
      padding-right: 40px;

      .message-input {
        height: 100%;
        width: 100%;
        border-top: 1px solid black;
      }
    }
    // --------   messages ---------//
    .clear {
      clear: both;
    }

    .sent-msg {
      float: right;

      .list__item--material__center {
        padding: 0;
      }

      .message-content {
        min-width: 83%;
        padding: 17px 8%;
        color: black;
        background: #caf1fb;
        -webkit-clip-path: polygon(10% 0%, 100% 0, 93% 25%, 93% 75%, 100% 100%, 10% 100%, 5px 75%, 5px 25%);
        clip-path: polygon(10% 0%, 100% 0, 93% 25%, 93% 75%, 100% 100%, 10% 100%, 5px 75%, 5px 25%);
      }

      .message-time {
        font-size: 15px;
        position: absolute;
        z-index: 9;
        right: 30px;
        bottom: -8px;
        padding: 1px 5px 0;
        background: white;
        -webkit-clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
        clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
        // /* Safari */
        // -webkit-transform: rotate(-90deg);
        // // /* Firefox */
        //    -moz-transform: rotate(-90deg);
        // // /* IE */
        //     -ms-transform: rotate(-90deg);
        // // /* Opera */
        //      -o-transform: rotate(-90deg);
        // // /* Internet Explorer */
        // //
        // filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
      }
    }

    .received-msg {
      float: left;

      .list__item--material__center,
      .list__item__center {
        margin-left: 5px;
        padding: 0;
      }

      .message-username {
        position: absolute;
        z-index: 9;
        top: -10px;
        left: 5px;
        padding: 0 5px;
        color: white;
        background: black;
        -webkit-clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
        clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
      }

      .message-content {
        min-width: 80%;
        padding: 17px 8% 17px 12%;
        color: black;
        background: #e5e5ea;
        -webkit-clip-path: polygon(5px 0%, 93% 0, 99% 25%, 99% 75%, 93% 100%, 5px 100%, 10% 75%, 10% 25%);
        clip-path: polygon(5px 0%, 93% 0, 99% 25%, 99% 75%, 93% 100%, 5px 100%, 10% 75%, 10% 25%);
      }

      .message-time {
        font-size: 15px;
        position: absolute;
        z-index: 9;
        right: 30px;
        bottom: -8px;
        padding: 1px 5px 0;
        background: darkgray;
        -webkit-clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
        clip-path: polygon(15% 0%, 85% 0, 100% 25%, 100% 75%, 85% 100%, 15% 100%, 0% 75%, 0% 25%);
      }
    }

    .info-msg {
      font-weight: bold;
      font-style: italic;
      position: relative;
      float: right;
      margin-bottom: 15px;
      margin-top: 10px;
      text-align: center;
      color: white;
      border-right: solid 21px !important;
      border-radius: 0 !important;
      background: #009688 !important;
      box-shadow: -26px 3px 0.5em black !important;
    }

